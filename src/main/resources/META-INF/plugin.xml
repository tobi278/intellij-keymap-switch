<idea-plugin>
    <id>it.karger.keymap-switch</id>
    <name>Keymap Switch</name>
    <vendor>Tobias Karger</vendor>

    <description>Simplifies switching between keymaps</description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="MyPlugin.SampleMenu" text="Keymaps" description="Pick a shortcut keymap">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes" class="ShowKeymapSelectionAction" text="Set keymap..."
                    description="Calls Keymap selection dialog">
                <keyboard-shortcut keymap="$default" first-keystroke="shift alt e"/>
            </action>
        </group>
    </actions>
</idea-plugin>